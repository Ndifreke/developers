<resources>

<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/primaryColor</item>
    <item name="android:textColorPrimary">@color/primaryLightColor</item>
    <item name="colorPrimaryDark">@color/primaryColor</item>
</style>

    <style name="appbarTheme">
        <item name="android:textColorPrimary">@color/secondaryLightColor</item>
    </style>

    <style name="normalText" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/bodyTextSize</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/bodyMarginBottom</item>
    </style>

    <style name="headerText"  parent="android:TextAppearance">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/headerTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="titleText"  parent="android:TextAppearance">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/titleTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">@dimen/TitleMarginBottom</item>
    </style>

    <style name="actionIcon">
        <item name="android:layout_width">@dimen/actionIconSize</item>
        <item name="android:layout_height">@dimen/actionIconSize</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

</resources>