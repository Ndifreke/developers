<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="16dp"
    android:onClick="showProfile"
    android:paddingStart="16dp"
    android:paddingLeft="16dp"
    android:paddingEnd="16dp">

    <ImageView
        android:id="@+id/imageAvater"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_small_profile" />

    <TextView
        android:id="@+id/githubName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageAvater"
        android:layout_alignLeft="@id/imageAvater"
        android:layout_alignRight="@id/imageAvater"
        android:gravity="center"
        android:padding="16dp"
        android:text="Stub"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>